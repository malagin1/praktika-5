<Window x:Class="_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Число A:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>
        <TextBox Name="NumberA" Grid.Column="2" Height="32" Width="100"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center">
            <TextBox
                Name="Answer"
                VerticalScrollBarVisibility="Visible"
                Height="150"
                Width="350"
                Margin="16"
                IsReadOnly="True"/>
        </StackPanel>
        <Button Content="Вычислить" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Height="22" Width="100" Click="ReadyButton_Click"/>
    </Grid>
</Window>
